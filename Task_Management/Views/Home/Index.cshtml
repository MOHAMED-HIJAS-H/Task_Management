@using Microsoft.AspNetCore.Identity
@using System.Security.Claims


@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Task Manager</title>
    <link rel="stylesheet" href="~/css/Style.css" />
</head>
<body>  

    <!-- Hero Section -->
    @* <header class="hero">
        <div class="container">
            <h1>Task Manager</h1>
            <p>Organize. Prioritize. Succeed.</p>
            <a href="#features" class="btn">Explore Features</a> <br />
            <a href="/Home/Task" target="_blank" class="btn">Smart Task</a>
        </div>
    </header> *@

    <!-- Navbar Section -->
    <!-- Styled Navbar -->
    <nav class="navbar">
        <div class="container">
            <h2 class="logo">Task Manager</h2>
            <ul class="nav-links">
                @* <li><a href="/Home/Team">Team Collaboration</a></li> *@
                <li><a href="#features">Features</a></li>
                @* <li><a href="/Home/Task" >Smart Task</a></li> *@
                <li><a asp-controller="Home" asp-action="Task">Smart Task</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#contact">Contact</a></li>

                @if(  User.Identity.IsAuthenticated)
                {
                    
                    <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>

                }
                else
                {
                    <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                }
                
                @* <li><a asp-controller="Account" asp-action="Register">Register</a></li> *@

            </ul>
        </div>
    </nav>



    <section class="progress-section">
        <div class="container">
            <h2>Task Progress Tracker</h2>
            <div class="progress-bar">
                <div class="step active">Planned</div>
                <div class="step active">In Progress</div>
                <div class="step">Review</div>
                <div class="step">Completed</div>
            </div>
        </div>
    </section>


    <!-- Features Section -->
    <section id="features" class="features">
        <div class="container">
            <h2>Why Choose Task Manager?</h2>
            <div class="feature-grid">
                <div class="feature">
                    <h3>Smart Dashboard</h3>
                    <p>Track tasks, deadlines, and progress all in one place.</p>
                </div>
                <div class="feature">
                    <h3>Team Collaboration</h3>
                    <p>Share, assign, and manage tasks with your team effortlessly.</p>
                </div>
                <div class="feature">
                    <h3>Cloud Sync</h3>
                    <p>Access your tasks from anywhere, anytime with secure sync.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="about">
        <div class="container">
            <h2>About Task Manager</h2>
            <p>
                Task Manager is built for teams and individuals to boost productivity,
                track performance, and simplify workflow with intuitive tools and
                real-time collaboration.
            </p>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact">
        <div class="container">
            <h2>Contact Us</h2>
            <form>
                <input type="text" placeholder="Your Name" required />
                <input type="email" placeholder="Your Email" required />
                <textarea placeholder="Your Message" required></textarea>
                <button type="submit" class="btn">Send Message</button>
            </form>
        </div>
    </section>

    <footer>
        <p>&copy; 2025 Task Manager. All rights reserved.</p>
    </footer>

</body>
</html>

