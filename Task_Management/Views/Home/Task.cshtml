@model List<Task_Management.Models.Task>
@{
    ViewData["Title"] = "Task Page";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <link rel="stylesheet" href="~/css/Task.css">
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
</head>

<body>
    <!-- Top-right profile display -->
    <div class="top-right-profile">
        <div class="user-profile">
            <span class="profile-icon">👤</span>
            <span class="username">@ViewBag.Username</span>
        </div>
    </div>
    <section class="taskManager">
        <header class="card">
           

            <h1>Task Manager ✅</h1>

            <form id="taskForm">
                <input type="text" id="taskInput" placeholder="Add a task..." required>
                <button type="submit" id="addTaskBtn">Add Task</button>
            </form>

            <a href="/Home/Index" class="back-btn">Back to Home</a>
        </header>

   

        <section id="taskContainer">
            @* <h1>Tasks</h1> *@
            <br />
            @for(int i = 0; i < Model.Count; i++)
            {
                var task = Model[i];

                <div class="taskCard 
                    @(task.IsCompleted ? "completed" : "pending")" data-index="@task.Id">

                    <p>@task.Title</p>
                    <p class="status">@(task.IsCompleted ? "Completed" : "Pending")</p>

                    <button class="button-box toggleBtn">
                        <span class="green">@(task.IsCompleted ? "Mark as Pending" : "Mark as Completed")</span>
                    </button>

                    <button class="button-box    deleteBtn">
                        <span class="red">Delete</span>
                    </button>
                </div>
            }
        </section>
    </section>

    <div class="confirm" style="display:;">
        <h1>Confirm your action</h1>
        <p>Are you <strong>really</strong> sure that you want to delete this task?</p>
        <button class="cancel">Cancel</button>
        <button autofocus class="confirmed">Confirm</button>
    </div>

    <script src="~/js/site.js"></script>
</body>
</html>




