@model List<Task_Management.Models.Task>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Task Calendar</title>

    <!-- ✅ Global UMD style (so FullCalendar works properly) -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #dfe9f3, #ffffff);
            margin: 0;
            padding: 0;
        }

        h2 {
            text-align: center;
            margin: 20px 0;
            color: #333;
        }

        #calendar {
            max-width: 80%;
            margin: 0 auto;
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        /* 🔹 Style today’s cell */
        .fc .fc-day-today {
            background-color: #d0ebff !important;
        }

        /* 🔹 Style Today button */
        .fc-button.fc-today-button {
            background-color: #339af0 !important;
            border-color: #339af0 !important;
            color: white !important;
        }

        .back-btn {
            display: block;
            width: fit-content;
            margin: 20px auto;
            padding: 10px 20px;
            background-color: #74c0fc;
            color: white;
            text-decoration: none;
            font-weight: bold;
            border-radius: 8px;
            transition: background-color 0.3s;
        }

            .back-btn:hover {
                background-color: #228be6;
            }
    </style>
</head>
<body>
    <h2>📅 Task Calendar View</h2>

    <a href="/Home/Task" class="back-btn">Back to Tasks</a>

    <div id="calendar"></div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const calendarEl = document.getElementById('calendar');

            const calendar = new FullCalendar.Calendar(calendarEl, { //constructor
                initialView: 'dayGridMonth',
                height: "auto",
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,listWeek'
                },
                events: [
                    @foreach (var task in Model)
                    {
                            if (task.Deadline.HasValue)
                            {
                                    <text>
                                    {
                                        title: '@task.Title',
                                        start: '@task.Deadline?.ToString("yyyy-MM-dd")',
                                        color: '@(task.IsCompleted ? "green" : "red")'
                                    },
                                    </text>
                            }
                    }
                ]
            });

            calendar.render();
        });
    </script>
</body>
</html>
